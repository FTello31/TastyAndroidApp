<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/miniatura_fondo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_miniatura_vendedor"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imagenVendedor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/cuenta"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="38dp"
        />

    <TextView
        android:id="@+id/nombre_vendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="44dp"
        android:paddingLeft="@dimen/espacio_norma_1"
        android:text="Large Text"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/celu"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:id="@+id/celular_vendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingBottom="16dp"
        android:paddingLeft="25dp"
        android:text="Medium Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/email"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="174dp"
        />


    <TextView
        android:id="@+id/email_vendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="180dp"
        android:paddingBottom="16dp"
        android:paddingLeft="14dp"
        android:text="Medium Right Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="15sp"
        android:textColor="@android:color/black" />


</FrameLayout>